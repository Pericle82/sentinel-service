# Server
NODE_ENV=development
HOST=0.0.0.0
PORT=3000
LOG_LEVEL=info
TRUST_PROXY=false
CORS_ORIGINS=
RATE_LIMIT_MAX=200
RATE_LIMIT_TIME_WINDOW_MS=60000

# Auth
# In development, auth defaults to disabled.
AUTH_MODE=disabled

# Dev auth (only used when AUTH_MODE=disabled)
DEV_USER_SUB=dev
DEV_USER_ROLES=

# Provider-agnostic OIDC (when AUTH_MODE=oidc)
# OIDC_ISSUER=https://issuer.example
# OIDC_AUDIENCE=your-audience
# OIDC_JWKS_URI=https://issuer.example/protocol/openid-connect/certs
# OIDC_CLIENT_ID=your-client-id
# OIDC_CLIENT_SECRET=your-client-secret
# OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
# OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:3000/
# OIDC_SCOPES=openid profile email

# Keycloak convenience (optional; used to derive issuer/audience)
# KEYCLOAK_BASE_URL=http://localhost:8080
# KEYCLOAK_REALM=your-realm
# KEYCLOAK_CLIENT_ID=your-client-id

# Data
DATABASE_URL=postgres://postgres:postgres@localhost:5432/greenfield_service
REDIS_URL=redis://localhost:6379

# Sessions (required when AUTH_MODE=oidc)
SESSION_SECRET=change-me-32-characters-minimum
SESSION_COOKIE_NAME=sid
SESSION_TTL_SECONDS=3600
SESSION_COOKIE_SECURE=false

# Jobs
JOBS_ENABLED=true
